<Window x:Class="Test.newNoteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Dialog Box" Width="300" Height="Auto">
    <StackPanel Margin="10">
        <TextBlock Text="Jegyzet Címe:" Margin="10"/>
        <TextBox x:Name="textBox1" Height="40" Margin="10"/>
        <TextBlock Text="Jegyzet Tartalma:" Margin="10"/>
        <TextBox x:Name="textBox2" MinHeight="150" Margin="10"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="OK" Click="OK_Click" Margin="10"/>
            <Button Content="Cancel" Click="Cancel_Click" Margin="10"/>
        </StackPanel>
    </StackPanel>
</Window>
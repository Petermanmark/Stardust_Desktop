<Window x:Class="Test.simpleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Dialog Box" Width="250" Height="200"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        BorderBrush="#FF673AB7"
        BorderThickness="2">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Name="resultBox" Text="result_text" TextAlignment="Center"/>
        <Button Content="OK" Click="OK_Click" Margin="0,67,0,-47" Width="100" HorizontalAlignment="Left"/>
    </Grid>
</Window>